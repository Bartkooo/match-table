<%= form_with(model: match) do |form| %>
  <% if match.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
        <% match.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="input-group mb-3">
      <label class="input-group-text">Team 1:</label>
      <%= form.text_field :team1, class:"form-control", required: true %>
      <span class="input-group-text">score: </span>
      <%= form.number_field :score1, class:"form-control", required: true %>
  </div>

  <div class="input-group mb-3">
      <label class="input-group-text">Team 2:</label>
      <%= form.text_field :team2, class:"form-control", required: true %>
      <span class="input-group-text">score: </span>
      <%= form.number_field :score2, class:"form-control", required: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
